<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorBluePrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="toggleGroupStyle">@style/Widget.Material.ToggleGroup</item>
        <item name="toggleButtonStyle">@style/Widget.Material.ToggleButton</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayout.TextInputEditText" parent="TextStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:inputType">text</item>
    </style>



    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Comment" parent="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_primary_bg</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textColorHint">@color/blue_300</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_300</item>
    </style>

    <style name="Style.Button.Raised" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Button.Raised.Positive" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/blue_500</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlHighlight">@color/blue_800</item>
    </style>

    <style name="Theme.Button.Raised.Negative" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/red_A200</item>
        <item name="colorAccent">@color/red_A200</item>
        <item name="colorControlHighlight">@color/red_A700</item>
    </style>

    <style name="Button.Flat.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:height">@dimen/material_flat_button</item>
        <item name="android:textColor">@drawable/button_flat_positive_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Flat.Negative" parent="Button">
        <item name="android:height">@dimen/material_flat_button</item>
        <item name="android:textColor">@drawable/button_flat_negative_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.Toggle.Blue" parent="Widget.Material.ToggleButton">
        <item name="android:background">@drawable/selector_blue_on_white</item>
    </style>

    <style name="TeamImage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteColoredText" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBarProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/pink_300</item>
    </style>

</resources>
